{
  "name": "devtools-conglomerate-frontend",
  "version": "1.0.0",
  "description": "Frontend for DevTools Conglomerate with enhanced interactivity and testing",
  "scripts": {
    "test": "jest",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "build:js": "terser src/js/main.js -o dist/js/main.min.js --compress --mangle",
    "build:css": "postcss src/css/styles.css -o dist/css/styles.min.css --use cssnano",
    "build": "npm run build:js && npm run build:css",
    "dev": "parcel index.html --port 5000 --open"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@parcel/packager-raw-url": "^2.16.0",
    "@parcel/packager-xml": "^2.16.0",
    "@parcel/transformer-webmanifest": "^2.16.0",
    "@parcel/transformer-xml": "^2.16.0",
    "babel-jest": "^29.0.0",
    "cssnano": "^6.0.0",
    "cypress": "^12.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "parcel": "^2.8.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "terser": "^5.16.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/js/test-setup.js"
    ]
  }
}
